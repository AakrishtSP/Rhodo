# Generated from CLion Inspection settings
---
FormatStyle: file
HeaderFilterRegex: '^(?!.*(thirdparty|build)).*'
Checks: >
  -*,
  readability-identifier-naming,
  bugprone-*,
  modernize-*,
  performance-*,
  cppcoreguidelines-*,
  misc-*,
  hicpp-*,
  cert-*,
  google-*,
  readability-*,
  portability-*,
  mpi-*,
  openmp-*

WarningsAsErrors: >
  readability-identifier-naming

CheckOptions:
  # --- General ---
  - { key: misc-no-recursion, value: false }
  # --- Types ---
  - { key: readability-identifier-naming.ClassCase,          value: PascalCase }
  - { key: readability-identifier-naming.StructCase,         value: PascalCase }
  - { key: readability-identifier-naming.UnionCase,          value: PascalCase }
  - { key: readability-identifier-naming.EnumCase,           value: PascalCase }
  - { key: readability-identifier-naming.TypedefCase,        value: PascalCase }
  - { key: readability-identifier-naming.TypeAliasCase,      value: PascalCase }

  # --- Functions ---
  - { key: readability-identifier-naming.FunctionCase,       value: camelCase }
  - { key: readability-identifier-naming.MethodCase,         value: camelCase }
  - { key: readability-function-size.LineThreshold, value: 80 }
  - { key: readability-function-size.StatementThreshold, value: 50 }
  - { key: readability-function-size.BranchThreshold, value: 10 }
  - { key: readability-function-size.ParameterThreshold, value: 8 }

  # --- Variables ---
  - { key: readability-identifier-naming.VariableCase,       value: camelCase }
  - { key: readability-identifier-naming.ParameterCase,      value: camelCase }
  - { key: readability-identifier-naming.PublicMemberCase,   value: camelCase }
  - { key: readability-identifier-naming.PrivateMemberCase,  value: camelCase }
  - { key: readability-identifier-naming.PrivateMemberSuffix,value: _ }
  - { key: readability-identifier-naming.GlobalVariableCase, value: camelCase }
  - { key: readability-identifier-naming.GlobalVariablePrefix, value: g_ }

  # --- Constants ---
  - { key: readability-identifier-naming.ConstantCase,       value: PascalCase }
  - { key: readability-identifier-naming.GlobalConstantCase, value: PascalCase }
  - { key: readability-identifier-naming.StaticConstantCase, value: PascalCase }
  - { key: readability-identifier-naming.ConstexprVariableCase, value: PascalCase }

  # --- Enums ---
  - { key: readability-identifier-naming.EnumConstantCase,   value: PascalCase }

  # --- Macros ---
  - { key: readability-identifier-naming.MacroDefinitionCase,value: UPPER_CASE }

  # --- Namespaces ---
  - { key: readability-identifier-naming.NamespaceCase,      value: lower_case }

  # --- Templates ---
  - { key: readability-identifier-naming.TemplateParameterCase, value: PascalCase }
...